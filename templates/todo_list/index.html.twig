{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% if app.request.get("_route") == "create_list" %}
            <h3>Créer une nouvelle liste</h3>
        {% else %}
            <h3>Modifier la liste <span style="color: {{ list.color }}">{{ list.name }}</span></h3>
        {% endif %}

        {{ form_start(form, {'attr': {"novalidate": "novalidate"}}) }}
            {{ form_row(form.name) }}
            {{ form_row(form.color, {'style': {"heigth": "80px"}}) }}
            {% if app.request.get("_route") == "create_list" %}
                <input type="submit" value="Créer" class="btn btn-primary">
            {% else %}
                <input type="submit" value="Modifer" class="btn btn-warning">
            {% endif %}
            
        {{ form_end(form) }}
    </div>
{% endblock %}
